<h1>My Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
  <li>
    <% if task.completed == true %>
      <input type="checkbox" checked>
    <% else %>
      <input type="checkbox">
    <% end %>
  <%= link_to task.title, task_path(task.id) %>
 </li>
 <% end %>
</ul>
<%= link_to "+Add a new Task", tasks_new_path %>
